---
layout = null;

// Change this URL to your OGAds or thank-you page
const REDIRECT_AFTER_CLAIM = "https://your-ogads-or-thankyou-link.com";

// Your Adsterra Popunder Script
const ADSTERRA_SCRIPT_SRC = "//pl27296725.profitableratecpm.com/4d/71/48/4d7148b149ebe0da7352370bf9b3f9e6.js";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>üé° Spin & Win - Exclusive Reward</title>
  <style>
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: "Segoe UI", Tahoma, sans-serif;
      background: linear-gradient(135deg, #f6f7fb, #ffffff);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 20px;
    }
    .card {
      background: #fff;
      width: 100%;
      max-width: 680px;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.08);
      padding: 32px 28px;
      text-align: center;
    }
    h1 {
      margin: 0 0 8px;
      font-size: 28px;
      color: #ff4081;
    }
    .subtitle {
      margin: 0 0 16px;
      color: #555;
      font-size: 16px;
    }
    .timer {
      display: inline-block;
      background: #fff3f5;
      color: #c2185b;
      border: 1px solid #ffd1dc;
      border-radius: 10px;
      padding: 8px 14px;
      font-weight: 600;
      margin-bottom: 16px;
    }
    .wheel-wrap {
      margin: 12px auto 22px;
      position: relative;
      width: 300px;
      height: 300px;
    }
    .wheel {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      border: 10px solid #222;
      background: conic-gradient(#ff4081 0% 16.6%, #4caf50 16.6% 33.3%, #2196f3 33.3% 50%,
                                 #ffc107 50% 66.6%, #9c27b0 66.6% 83.3%, #ff7043 83.3% 100%);
      transition: transform 4s ease-out;
    }
    .pointer {
      position: absolute;
      top: -22px;
      left: 50%;
      transform: translateX(-50%);
      width: 0; height: 0;
      border-left: 16px solid transparent;
      border-right: 16px solid transparent;
      border-bottom: 26px solid #222;
    }
    .cta {
      display: inline-block;
      padding: 14px 26px;
      font-size: 18px;
      background: #28a745;
      color: #fff;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      transition: background .2s ease;
    }
    .cta:hover { background: #218838; }
    .progress {
      height: 8px;
      width: 100%;
      background: #eef0f4;
      border-radius: 999px;
      overflow: hidden;
      margin: 16px 0 6px;
    }
    .bar {
      height: 100%;
      width: 0%;
      background: linear-gradient(90deg,#28a745,#66bb6a);
      transition: width .4s ease;
    }
    .note {
      font-size: 13px;
      color: #666;
    }
    .result {
      display: none;
      margin-top: 18px;
      padding: 16px;
      background: #f7fff8;
      border: 1px solid #c8e6c9;
      border-radius: 12px;
    }
    .claim {
      margin-top: 12px;
      display: inline-block;
      background: #ff4081;
      color: #fff;
      padding: 12px 22px;
      border-radius: 10px;
      text-decoration: none;
    }
    @media (max-width: 420px) {
      .wheel-wrap { width: 250px; height: 250px; }
    }
  </style>
</head>
<body>
  <div class="card">
    <h1>Spin & Win - Today Only</h1>
    <p class="subtitle">Try your luck and see if you qualify for a reward!</p>

    <div class="timer">‚è≥ Time left: <span id="time">02:00</span></div>

    <div class="wheel-wrap" id="interact">
      <div class="pointer"></div>
      <div id="wheel" class="wheel"></div>
    </div>

    <button id="spinBtn" class="cta">üé° Spin Now</button>

    <div class="progress"><div id="bar" class="bar"></div></div>
    <div class="note">* First click may open a sponsor page. Return here to finish and claim.</div>

    <div id="result" class="result">
      üéâ Congratulations! You are eligible to claim your reward.<br />
      <a id="claimBtn" class="claim" href="#">üëâ Claim Your Prize</a>
    </div>
  </div>

  <!-- Adsterra Popunder Script -->
  <script type='text/javascript' src='//pl27296725.profitableratecpm.com/4d/71/48/4d7148b149ebe0da7352370bf9b3f9e6.js'></script>
  <script is:inline>
    const wheel = document.getElementById('wheel');
    const spinBtn = document.getElementById('spinBtn');
    const resultBox = document.getElementById('result');
    const claimBtn = document.getElementById('claimBtn');
    const bar = document.getElementById('bar');
    const timeEl = document.getElementById('time');

    // Countdown timer (2 minutes)
    let seconds = 120;
    const timer = setInterval(() => {
      seconds--;
      const m = String(Math.floor(seconds / 60)).padStart(2, '0');
      const s = String(seconds % 60).padStart(2, '0');
      timeEl.textContent = m + ":" + s;
      if (seconds <= 0) {
        clearInterval(timer);
        finishSpin(true);
      }
    }, 1000);

    function finishSpin(timeUp = false) {
      bar.style.width = '100%';
      resultBox.style.display = 'block';
      if (timeUp) {
        resultBox.firstChild.textContent = "‚è∞ Time's up - last chance!";
      }
    }

    spinBtn.addEventListener('click', () => {
      const deg = Math.floor(3600 + Math.random() * 2000);
      wheel.style.transform = `rotate(${deg}deg)`;
      spinBtn.disabled = true;

      let p = 0;
      const prog = setInterval(() => {
        p = Math.min(100, p + 8);
        bar.style.width = p + "%";
        if (p >= 100) clearInterval(prog);
      }, 200);

      setTimeout(() => finishSpin(false), 4000);
    });

    claimBtn.addEventListener('click', (e) => {
      e.preventDefault();
      window.location.href = REDIRECT_AFTER_CLAIM;
    });
  </script>
</body>
</html>
